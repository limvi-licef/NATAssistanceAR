<Page
    x:Class="PreviewCameraEx.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PreviewCameraEx"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Video"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" FontSize="50" HorizontalAlignment="Center"/>
        <TextBlock Text="Frames" Grid.Row="0" Grid.Column="5"                     FontSize="50" HorizontalAlignment="Center"/>
        
        <CaptureElement x:ConnectionId='2' Name="VideoWidget"  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Grid.RowSpan="2"/>
        <Image x:ConnectionId='3'          Name="FrameWidget1" Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="1"/>
        <Image x:ConnectionId='4'          Name="FrameWidget2" Grid.Row="2" Grid.Column="5" Grid.ColumnSpan="1"/>

        <TextBlock Text="Capture"                                             Grid.Row="3" Grid.Column="0"                        FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:ConnectionId='5' Name="StartCapture" Content="Start"                           Grid.Row="3" Grid.Column="1" Width="75" Height="40" FontSize="15" HorizontalAlignment="Center"/>
        <Button x:ConnectionId='6' Name="StopCapture"  Content="Stop"                            Grid.Row="3" Grid.Column="2" Width="75" Height="40" FontSize="15" HorizontalAlignment="Center"/>

        <TextBlock Text="Video"                                                 Grid.Row="4" Grid.Column="0"                         FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:ConnectionId='7' Name="DisplayVideo" Content="Display"                           Grid.Row="4" Grid.Column="1" Width="75" Height="40" FontSize="15" HorizontalAlignment="Center"/>
        <Button x:ConnectionId='8' Name="HideVideo"    Content="Hide"                              Grid.Row="4" Grid.Column="2" Width="75" Height="40" FontSize="15" HorizontalAlignment="Center"/>

        <TextBlock Text="Frame"                                                              Grid.Row="5" Grid.Column="0"                        FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:ConnectionId='9' Name="CaptureFrame"     Content="Capture"                                    Grid.Row="5" Grid.Column="1" Width="75" Height="40" FontSize="15" HorizontalAlignment="Center"/>
        <Button x:ConnectionId='10' Name="DisplayFrame"     Content="Display"                                    Grid.Row="5" Grid.Column="2" Width="75" Height="40" FontSize="15" HorizontalAlignment="Center"/>
        <Button x:ConnectionId='11' Name="HideFrame"        Content="Hide"                                       Grid.Row="5" Grid.Column="3" Width="75" Height="40" FontSize="15" HorizontalAlignment="Center"/>

        <TextBlock Text="Jpeg"                                                              Grid.Row="6" Grid.Column="0"                        FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:ConnectionId='12' Name="CaptureFrameJpeg"  Content="Capture"                                  Grid.Row="6" Grid.Column="1" Width="75" Height="40" FontSize="15" HorizontalAlignment="Center"/>

    </Grid>
</Page>

